---
import BaseLayout from "./BaseLayout.astro";
import { fade } from "astro:transitions";
const { frontmatter } = Astro.props;
---

<BaseLayout pageTitle={frontmatter.title}>
  <p>Written by: <a href={`/about/`}> {frontmatter.author}</a></p>
  <p transition:animate={fade({duration: '2s'})}>Publicado el: {frontmatter.pubDate.toString().slice(0, 10)}</p>
  <img src={frontmatter.image.url} alt={frontmatter.image.alt} width="300" />
  <div class="flex gap-2 p-2 w-fit rounded">
    {
      frontmatter.tags.map((tag) => (
        <a
          class="tag-rounded p-1 px-2 hover:bg-slate-500 rounded-full outline outline-1 outline-slate-600 bg-slate-700"
          href={`/tags/${tag}`}
        >
          {" "}
          {tag}{" "}
        </a>
      ))
    }
  </div>
  <slot />
</BaseLayout>
